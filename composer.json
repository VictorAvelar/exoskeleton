{
    "name": "victoravelar/exoskeleton",
    "type": "library",
    "description": "A simple and up to date PHP package foundation (Inspired heavily by league/skeleton)",
    "keywords": [
        "victoravelar",
        "exoskeleton",
        "php"
    ],
    "homepage": "https://github.com/victoravelar/exoskeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Hugo Avelar Ossorio",
            "email": "deltatuts@gmail.com",
            "homepage": "https://victoravelar.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan": "^0.11.1",
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "VictorAvelar\\Exoskeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VictorAvelar\\Exoskeleton\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse src tests -l 5"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
